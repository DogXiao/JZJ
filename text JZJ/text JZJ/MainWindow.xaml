<Window x:Class="text_JZJ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text JZJ" Height="500" Width="750">
    <Grid>
        <DockPanel >
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="文件">
                    <MenuItem Header="保存"></MenuItem>
                    <MenuItem Header="打开"></MenuItem>
                    <MenuItem Header="另存为"></MenuItem>
                </MenuItem>
                <MenuItem Header="编辑">
                    <MenuItem Header="查找"></MenuItem>
                    <MenuItem Header="替换"></MenuItem>
                </MenuItem>
                <MenuItem Header="帮助">
                    <MenuItem Header="查看帮助"></MenuItem>
                    <MenuItem Header="关于text JZJ"></MenuItem>
                </MenuItem>
            </Menu>
            <RichTextBox AcceptsTab="True" DockPanel.Dock="Bottom"></RichTextBox>
        </DockPanel>
    </Grid>
</Window>
